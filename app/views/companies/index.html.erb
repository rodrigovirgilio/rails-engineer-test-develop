<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="text-center mb-5">
        <h1 class="display-4">Company Search</h1>
        <p class="lead text-muted">Search by name, city or CoC number</p>
      </div>

      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <%= form_with url: companies_path, method: :get,
              data: { controller: "search", action: "input->search#perform" },
              html: { class: "mb-0" } do |f| %>

            <div class="input-group input-group-lg">
              <%= f.text_field :query,
                  value: @query,
                  class: "form-control",
                  placeholder: "Type to search for companies...",
                  data: { search_target: "input" },
                  autocomplete: "off" %>

              <button class="btn btn-primary" type="submit">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                  <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                </svg>
                Search
              </button>
            </div>
          <% end %>
        </div>
      </div>

      <div id="search-results" data-search-target="results">
        <%= turbo_frame_tag "companies_list" do %>
          <%= render "companies_list", companies: @companies, query: @query %>
        <% end %>
      </div>

      <div class="text-center mt-5">
        <%= link_to "Admin Area â†’", admin_companies_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
