<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mb-4">Business Administration</h1>

      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Statistics</h5>
          <p class="card-text">
            Total companies in the database: <strong><%= @companies_count %></strong>
          </p>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Import Companies via CSV</h5>
          <p class="card-text text-muted">
            Upload a CSV file with the columns: name, coc_number, city, address
          </p>

          <%= form_with url: import_admin_companies_path, multipart: true, class: "mt-3" do |f| %>
            <div class="mb-3">
              <label for="file" class="form-label">Select the CSV file</label>
              <%= f.file_field :file, class: "form-control", accept: ".csv", required: true %>
              <div class="form-text">Only .csv files are accepted</div>
            </div>

            <%= f.submit "Import Companies", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

      <% if @companies_count > 0 %>
        <div class="card border-danger">
          <div class="card-body">
            <h5 class="card-title text-danger">Danger Zone</h5>
            <p class="card-text">This action will remove all companies from the database.</p>

            <%= button_to "Remove All Companies",
                destroy_all_admin_companies_path,
                method: :delete,
                class: "btn btn-danger",
                data: { confirm: "Are you sure? This action cannot be undone!" } %>
          </div>
        </div>
      <% end %>

      <div class="mt-4">
        <%= link_to "← Back to Search", root_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
