<% if query.present? %>
  <% if companies.any? %>
    <div class="alert alert-info">
      Found <strong><%= companies.size %></strong> company(ies)
      <% if companies.size >= 50 %>
        (showing first 50 results)
      <% end %>
    </div>

    <div class="list-group">
      <% companies.each do |company| %>
        <div class="list-group-item list-group-item-action">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= company.name %></h5>
            <small class="text-muted">CoC: <%= company.coc_number %></small>
          </div>
          <p class="mb-1">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
              <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
            </svg>
            <%= company.city %>
          </p>
          <% if company.address.present? %>
            <small class="text-muted"><%= company.address %></small>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-warning">
      <strong>No companies found</strong> to "<%= query %>"
      <br>
      <small>Try searching for another term.</small>
    </div>
  <% end %>
<% else %>
  <div class="text-center text-muted py-5">
    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" viewBox="0 0 16 16" class="mb-3">
      <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
    </svg>
    <p>Type something in the search field above to find companies</p>
  </div>
<% end %>
